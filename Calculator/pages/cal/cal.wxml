<view class="content">
  <view class="screen">
    {{screenData}}
  </view>
  <view class="btnGroup">
    <view class="item orange" bindtap="clearOne" id="{{idBack}}">退格</view>
    <view class="item orange">清屏</view>
    <view class="item orange" id="{{idAdd}}">+</view>
    <view class="item orange" id="{{idNegative}}">-</view>
  </view>
  <view class="btnGroup">
    <view class="item blue">1</view>
    <view class="item blue">2</view>
    <view class="item blue">3</view>
    <view class="item orange">x</view>
  </view>
  <view class="btnGroup">
    <view class="item blue">4</view>
    <view class="item blue">5</view>
    <view class="item blue">6</view>
    <view class="item orange">/</view>
  </view>
  <view class="btnGroup">
    <view class="item blue">7</view>
    <view class="item blue">8</view>
    <view class="item blue">9</view>
    <view class="item orange">%</view>
  </view>
  <view class="btnGroup">
    <view class="item blue">0</view>
    <view class="item blue">.</view>
    <view class="item blue" bindtap="history">历史</view>
    <view class="item orange">=</view>
  </view>
</view>